{% extends 'base.html.twig' %}

{% block title %}Casino | {% endblock %}

{% block body %}
<section class="classement">
    <img src="{{ asset('img/enseigne.png') }}" alt="enseigne" class="classement__enseigne" data-aos="flip-right" data-aos-delay="50" data-aos-duration="1000">
    <ul class="classement__liste">
        <li class="classement__liste--element"><i class="fas fa-dice-one"></i><span class="classement__name">{{ sheets[0][0]|default("") }} {{ sheets[0][1]|default("") }}</span><span class="classement__famille">{{ sheets[0][4]|default("-") }}</span><span class="classement__points">{{ sheets[0][3]|default("0") }} pts</span></li>

        <li class="classement__liste--element"><i class="fas fa-dice-two"></i><span class="classement__name">{{ sheets[1][0]|default("") }} {{ sheets[1][1]|default("") }}</span><span class="classement__famille">{{ sheets[1][4]|default("-") }}</span><span class="classement__points">{{ sheets[1][3]|default("0") }} pts</span></li>

        <li class="classement__liste--element"><i class="fas fa-dice-three"></i><span class="classement__name">{{ sheets[2][0]|default("") }} {{ sheets[2][1]|default("") }}</span><span class="classement__famille">{{ sheets[2][4]|default("-") }}</span><span class="classement__points">{{ sheets[2][3]|default("0") }} pts</span></li>

        {% for user in sheets|slice(3) %}
            <li class="classement__liste--element"><span class="classement__range">{{ user[2]|default("999+") }}</span><span class="classement__name">{{ user[0]|default("") }} {{ user[1]|default("") }}</span><span class="classement__famille">{{ user[4]|default("-") }}</span><span class="classement__points">{{ user[3]|default("0") }} pts</span></li>
            </li>
        {% endfor %}
    </ul>
</section>
<section class="lot">
    <h2 class="lot__title">A Gagner</h2>
    <div class="lot__present">
        
    </div>
</section>
{% endblock %}
