{% extends 'base.html.twig' %}

{% block title %}Casino | {% endblock %}

{% block body %}
<section class="classement">
    <img src="{{ asset('img/enseigne.png') }}" alt="enseigne" class="classement__enseigne" data-aos="flip-right" data-aos-delay="50" data-aos-duration="1000">
    <ul class="classement__liste">
        {% if sheets[0] is defined %}
        <li class="classement__liste--element"><i class="fas fa-dice-one"></i><span class="classement__name">{{ sheets[0][0] }} {{ sheets[0][1] }}</span><span class="classement__points">{{ sheets[0][3] }} pts</span></li>
        {% else %}
        <li class="classement__liste--element"><i class="fas fa-dice-one"></i><span class="classement__name">-</span><span class="classement__points">0 pts</span></li>
        {% endif %}

        {% if sheets[1] is defined %}
        <li class="classement__liste--element"><i class="fas fa-dice-two"></i><span class="classement__name">{{ sheets[1][0] }} {{ sheets[1][1] }}</span><span class="classement__points">{{ sheets[1][3] }} pts</span></li>
        {% else %}
        <li class="classement__liste--element"><i class="fas fa-dice-two"></i><span class="classement__name">-</span><span class="classement__points">0 pts</span></li>
        {% endif %}

        {% if sheets[2] is defined %}
        <li class="classement__liste--element"><i class="fas fa-dice-three"></i><span class="classement__name">{{ sheets[2][0] }} {{ sheets[2][1] }}</span><span class="classement__points">{{ sheets[2][3] }} pts</span></li>
        {% else %}
        <li class="classement__liste--element"><i class="fas fa-dice-three"></i><span class="classement__name">-</span><span class="classement__points">0 pts</span></li>
        {% endif %}

        {% for user in sheets|slice(3) %}
            <li class="classement__liste--element"><span class="classement__range">{{ user[2] }}</span><span class="classement__name">{{ user[0] }} {{ user[1] }}</span><span class="classement__points">{{ user[3] }} pts</span></li>
            </li>
        {% endfor %}
    </ul>
</section>
<section class="lot">
    <h2 class="lot__title">A Gagner</h2>
    <div class="lot__present">
        
    </div>
</section>
{% endblock %}
